# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=sqlite:///./campus_market.db
# For Oracle 23ai (production):
# DATABASE_URL=oracle+oracledb://system:HackathonDev2026!@localhost:1521/?service_name=FREEPDB1

# ── Auth ──────────────────────────────────────────────────────────────────────
SECRET_KEY=hackathon-dev-secret-change-in-prod-2026
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ── Oracle GenAI (primary AI — OCI request signing, Option A) ─────────────────
# Local OCI config (created from profile -> API Keys in Oracle dashboard)
OCI_CONFIG_FILE=~/.oci/config
OCI_CONFIG_PROFILE=DEFAULT
# Optional explicit endpoint (leave blank to auto-derive from OCI config region)
ORACLE_GENAI_BASE_URL=

# Model name — use the exact string shown in the playground or model catalog
# Chat models:
#   meta.llama-3.1-70b-instruct       ← recommended (free-tier eligible)
#   cohere.command-r-plus
# Embedding models (used by oracle_embed() utility):
#   cohere.embed-english-v3.0
ORACLE_GENAI_MODEL=meta.llama-3.1-70b-instruct
ORACLE_GENAI_API_FORMAT=COHERE

# Compartment context for Oracle GenAI.
# Use either:
#  - a compartment OCID (ocid1.compartment...)
#  - or your root tenancy OCID (ocid1.tenancy...) if that's all you have.
ORACLE_GENAI_COMPARTMENT_ID=ocid1.compartment.oc1..aaaaaaaaXXXXXXXXXX

# Legacy bearer key (unused in Option A, keep blank)
ORACLE_GENAI_API_KEY=

# ── Anthropic Claude (optional fallback when OCI is unconfigured) ─────────────
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# ── Economy ───────────────────────────────────────────────────────────────────
DEFAULT_BLUE_COINS=1000
MAX_PORTFOLIO_RISK_PCT=50
