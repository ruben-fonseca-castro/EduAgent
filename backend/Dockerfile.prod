FROM python:3.12-slim

# Install system deps needed for oracledb native mode + scipy
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libgomp1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies first (layer cache)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create data dirs so volume mounts work correctly
RUN mkdir -p /app/uploads /app/data/chroma_db /app/data/student_context /app/data/generated_lessons

EXPOSE 8000

# Production: no --reload, multiple workers, access log to stdout
CMD ["uvicorn", "app.main:app", \
     "--host", "0.0.0.0", \
     "--port", "8000", \
     "--workers", "2", \
     "--access-log", \
     "--log-level", "info"]
