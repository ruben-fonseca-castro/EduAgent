<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title }} ‚Äî EduAgent</title>

  <!-- CDN Dependencies -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.plot.ly/plotly-2.35.2.min.js" charset="utf-8"></script>
  <script>
    MathJax = {
      tex: { inlineMath: [['$', '$']], displayMath: [['$$', '$$']] },
      svg: { fontCache: 'global' }
    };
  </script>
  <script src="https://cdn.jsdelivr.net/npm/mathjax@3.2.2/es5/tex-svg.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/mermaid@11.4.1/dist/mermaid.min.js"></script>

  <style>
    /* Reading progress bar */
    #progress-bar {
      position: fixed;
      top: 0; left: 0;
      height: 3px;
      background: linear-gradient(90deg, #6366f1, #8b5cf6);
      z-index: 100;
      transition: width 0.1s linear;
    }

    /* Callout boxes */
    .callout {
      border-left: 4px solid;
      padding: 1rem 1.25rem;
      margin: 1.25rem 0;
      border-radius: 0 0.5rem 0.5rem 0;
    }
    .callout-info {
      background: #eff6ff;
      border-color: #3b82f6;
    }
    .callout-exercise {
      background: #f0fdf4;
      border-color: #22c55e;
    }
    .callout-warning {
      background: #fffbeb;
      border-color: #f59e0b;
    }

    /* Code blocks */
    pre {
      background: #1e1e2e;
      color: #cdd6f4;
      padding: 1rem 1.25rem;
      border-radius: 0.5rem;
      overflow-x: auto;
      font-size: 0.875rem;
      line-height: 1.6;
    }
    code:not(pre code) {
      background: #f3f4f6;
      padding: 0.1rem 0.3rem;
      border-radius: 0.25rem;
      font-size: 0.875em;
      color: #6366f1;
    }

    /* Mermaid diagrams */
    .mermaid {
      background: #f9fafb;
      border-radius: 0.5rem;
      padding: 1rem;
      margin: 1rem 0;
      text-align: center;
    }

    /* Active section nav */
    .nav-link.active {
      background: #ede9fe;
      color: #5b21b6;
      font-weight: 600;
    }

    /* Smooth scroll */
    html { scroll-behavior: smooth; }

    /* Section cards */
    .section-card {
      scroll-margin-top: 5rem;
    }

    /* MathJax display */
    .mathjax-equation {
      text-align: center;
      margin: 1.5rem 0;
      overflow-x: auto;
    }
  </style>
</head>
<body class="bg-gray-50 text-gray-900" onscroll="updateProgress()">

  <!-- Reading progress bar -->
  <div id="progress-bar" style="width: 0%"></div>

  <!-- ‚îÄ‚îÄ Sticky Header ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
  <header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
      <div>
        <div class="flex items-center gap-2">
          <span class="text-2xl">üìö</span>
          <h1 class="text-xl font-bold text-gray-900">{{ title }}</h1>
        </div>
        <div class="flex items-center gap-3 mt-0.5 text-sm text-gray-500">
          <span>{{ subject }}</span>
          <span>‚Ä¢</span>
          <span>{{ grade_level | replace('_', ' ') | title }}</span>
          <span>‚Ä¢</span>
          <span>{{ duration_minutes }} min</span>
          <span>‚Ä¢</span>
          <span>{{ student_name }}</span>
        </div>
      </div>
      <div class="text-right text-xs text-gray-400">
        <div>Generated by EduAgent</div>
        <div>{{ generated_at }}</div>
      </div>
    </div>
  </header>

  <!-- ‚îÄ‚îÄ Main Layout ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
  <div class="max-w-7xl mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">

      <!-- ‚îÄ‚îÄ Sidebar ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
      <aside class="lg:col-span-1">
        <div class="sticky top-24 space-y-4">

          <!-- Learning Objectives -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h2 class="font-semibold text-gray-800 mb-3 flex items-center gap-2">
              <span>üéØ</span> Learning Objectives
            </h2>
            <ul class="space-y-2">
              {% for obj in learning_objectives %}
              <li class="flex gap-2 text-sm text-gray-600">
                <span class="text-indigo-500 mt-0.5 flex-shrink-0">‚úì</span>
                <span>{{ obj }}</span>
              </li>
              {% endfor %}
            </ul>
          </div>

          <!-- Section Navigation -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h2 class="font-semibold text-gray-800 mb-3 flex items-center gap-2">
              <span>üìã</span> Sections
            </h2>
            <nav class="space-y-1">
              {% for section in sections %}
              <a href="#section-{{ section.index }}"
                 class="nav-link block px-3 py-2 rounded-lg text-sm text-gray-600 hover:bg-gray-100 transition-colors"
                 data-section="{{ section.index }}">
                <span class="text-gray-400 mr-1">{{ loop.index }}.</span>
                {{ section.title }}
              </a>
              {% endfor %}
            </nav>
          </div>

          <!-- Progress -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h2 class="font-semibold text-gray-800 mb-2 flex items-center gap-2">
              <span>üìä</span> Your Progress
            </h2>
            <div class="bg-gray-200 rounded-full h-2">
              <div id="lesson-progress" class="bg-indigo-500 h-2 rounded-full transition-all" style="width: 0%"></div>
            </div>
            <p class="text-xs text-gray-500 mt-1.5">
              <span id="progress-pct">0</span>% complete
            </p>
          </div>

        </div>
      </aside>

      <!-- ‚îÄ‚îÄ Content Area ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
      <main class="lg:col-span-3 space-y-6">

        {% for section in sections %}
        <div id="section-{{ section.index }}" class="section-card bg-white rounded-xl shadow-sm border border-gray-200 p-6">

          <!-- Section Header -->
          <div class="flex items-center gap-3 mb-4 pb-3 border-b border-gray-100">
            <span class="flex-shrink-0 w-8 h-8 bg-indigo-100 text-indigo-700 rounded-lg flex items-center justify-center text-sm font-bold">
              {{ loop.index }}
            </span>
            <div>
              <h2 class="text-xl font-bold text-gray-900">{{ section.title }}</h2>
              {% if section.content_type %}
              <span class="text-xs text-gray-400 uppercase tracking-wide">{{ section.content_type | replace('_', ' ') }}</span>
              {% endif %}
            </div>
          </div>

          <!-- Section Content -->
          <div class="prose max-w-none">
            {{ section.generated_content | safe }}
          </div>

          <!-- Figures for this section -->
          {% for fig in section.figures %}
          <div class="mt-6">
            {% if fig.figure_type == 'plotly' %}
            <div class="rounded-lg overflow-hidden border border-gray-200">
              <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
                <h3 class="text-sm font-semibold text-gray-700">üìà {{ fig.title }}</h3>
              </div>
              <div id="plotly-{{ fig.figure_id }}" style="min-height: 400px;"></div>
            </div>

            {% elif fig.figure_type == 'mermaid' %}
            <div class="rounded-lg overflow-hidden border border-gray-200">
              <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
                <h3 class="text-sm font-semibold text-gray-700">üî∑ {{ fig.title }}</h3>
              </div>
              <div class="p-4">
                <pre class="mermaid">{{ fig.data }}</pre>
              </div>
            </div>

            {% elif fig.figure_type == 'mathjax' %}
            <div class="rounded-lg overflow-hidden border border-gray-200">
              <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
                <h3 class="text-sm font-semibold text-gray-700">‚àë {{ fig.title }}</h3>
              </div>
              <div class="mathjax-equation p-6">
                $${{ fig.data }}$$
              </div>
            </div>
            {% endif %}
          </div>
          {% endfor %}

        </div>
        {% endfor %}

        <!-- Completion card -->
        <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl border border-indigo-200 p-6 text-center">
          <div class="text-4xl mb-3">üéâ</div>
          <h2 class="text-xl font-bold text-indigo-900 mb-2">Lesson Complete!</h2>
          <p class="text-indigo-700">You've finished <strong>{{ title }}</strong>.</p>
          <p class="text-sm text-indigo-600 mt-2">
            Review your notes and try the exercises to reinforce your understanding.
          </p>
          <a href="/" class="mt-4 inline-block bg-indigo-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-indigo-700 transition-colors">
            ‚Üê Back to Dashboard
          </a>
        </div>

      </main>
    </div>
  </div>

  <!-- ‚îÄ‚îÄ Plotly Figure Data ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
  <script>
    // Embedded figure data (all_figures as JSON)
    const figureData = {{ all_figures | tojson }};

    document.addEventListener('DOMContentLoaded', async function() {
      // Initialize Mermaid
      mermaid.initialize({ startOnLoad: false, theme: 'default' });

      // Render Mermaid diagrams manually to catch errors
      const mermaidNodes = document.querySelectorAll('.mermaid');
      for (let i = 0; i < mermaidNodes.length; i++) {
        const el = mermaidNodes[i];
        try {
          const { svg } = await mermaid.render('mermaid-svg-' + i, el.textContent);
          el.innerHTML = svg;
        } catch (e) {
          el.innerHTML = '<div class="p-4 text-red-500 text-sm">Could not render diagram (syntax error).</div>';
        }
      }

      // Render Plotly figures
      figureData.forEach(function(fig) {
        if (fig.figure_type !== 'plotly') return;
        const el = document.getElementById('plotly-' + fig.figure_id);
        if (!el) return;
        try {
          const figJson = typeof fig.data === 'string' ? JSON.parse(fig.data) : fig.data;
          Plotly.react(el, figJson.data || [], figJson.layout || {}, { responsive: true });
        } catch (e) {
          el.innerHTML = '<div class="p-4 text-red-500 text-sm">Could not render figure: ' + e.message + '</div>';
        }
      });

      // Section nav highlighting via IntersectionObserver
      const sections = document.querySelectorAll('.section-card');
      const navLinks = document.querySelectorAll('.nav-link');

      const observer = new IntersectionObserver(
        function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              navLinks.forEach(function(link) { link.classList.remove('active'); });
              const id = entry.target.id.replace('section-', '');
              const activeLink = document.querySelector('.nav-link[data-section="' + id + '"]');
              if (activeLink) activeLink.classList.add('active');
            }
          });
        },
        { rootMargin: '-20% 0px -60% 0px' }
      );

      sections.forEach(function(section) { observer.observe(section); });
    });

    // Reading progress
    function updateProgress() {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const pct = docHeight > 0 ? Math.round((scrollTop / docHeight) * 100) : 0;
      document.getElementById('progress-bar').style.width = pct + '%';
      document.getElementById('lesson-progress').style.width = pct + '%';
      document.getElementById('progress-pct').textContent = pct;
    }
  </script>

</body>
</html>
